<Window x:Class="CoderCamp18.View.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:CoderCamp18.ViewModel"
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance viewModel:NewTaskViewModel}"
        Title="New Task" 
        Height="122" 
        Width="354" 
        WindowStyle="ToolWindow" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" SizeToContent="Height">
        <DockPanel Margin="12,6,12,12">
            <Label DockPanel.Dock="Top" FontSize="18" Content="New Task" />
            <Button 
                DockPanel.Dock="Right" 
                Style="{StaticResource FontAwesomeButton}" 
                Command="{Binding Path=AddTaskCommand}" 
                IsDefault="True"
                Content="&#xf055;" 
                ToolTip="Add Task"/>
            <TextBox 
                DockPanel.Dock="Right" 
                Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,6,0,0"
                Height="30"/>
        </DockPanel>
</Window>
